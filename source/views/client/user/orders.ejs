<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link href="/client/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../layout/header') -%>
    
    <div class="container py-5">
        <div class="row">
            <div class="col-12">
                <h2 class="mb-4">
                    <i class="fas fa-shopping-bag me-2"></i>Đơn hàng của tôi
                </h2>
            </div>
        </div>
        
        <!-- User Info Card -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-primary">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h5 class="mb-1">
                                    <i class="fas fa-user me-2"></i>
                                    Xin chào, <%= typeof user !== 'undefined' ? user.full_name : req.session.user.full_name %>!
                                </h5>
                                <p class="text-muted mb-0">
                                    Email: <%= typeof user !== 'undefined' ? user.email : req.session.user.email %>
                                </p>
                            </div>
                            <div class="col-md-4 text-md-end">
                                <a href="/login/profile" class="btn btn-outline-primary">
                                    <i class="fas fa-edit me-2"></i>Chỉnh sửa hồ sơ
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Orders List -->
        <div class="row">
            <div class="col-12">
                <% if (orders && orders.length > 0) { %>
                    <div class="card shadow">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-list me-2"></i>Danh sách đơn hàng (<%= orders.length %> đơn)
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Mã đơn hàng</th>
                                            <th>Ngày đặt</th>
                                            <th class="text-center">Số sản phẩm</th>
                                            <th class="text-end">Tổng tiền</th>
                                            <th class="text-center">Trạng thái</th>
                                            <th class="text-center">Hành động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% orders.forEach(order => { %>
                                            <tr>
                                                <td>
                                                    <strong class="text-primary">#<%= order.order_id %></strong>
                                                </td>
                                                <td>
                                                    <i class="fas fa-calendar me-1 text-muted"></i>
                                                    <%= new Date(order.created_at).toLocaleDateString('vi-VN') %>
                                                    <br>
                                                    <small class="text-muted">
                                                        <%= new Date(order.created_at).toLocaleTimeString('vi-VN') %>
                                                    </small>
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge bg-secondary">
                                                        <%= order.item_count || 0 %> sản phẩm
                                                    </span>
                                                </td>
                                                <td class="text-end">
                                                    <strong class="text-success">
                                                        <%= order.total_amount.toLocaleString() %> VNĐ
                                                    </strong>
                                                </td>
                                                <td class="text-center">
                                                    <% 
                                                        let statusClass = '';
                                                        let statusText = '';
                                                        let statusIcon = '';
                                                        switch(order.status) {
                                                            case 'pending':
                                                                statusClass = 'bg-warning text-dark';
                                                                statusText = 'Chờ xử lý';
                                                                statusIcon = 'fas fa-clock';
                                                                break;
                                                            case 'confirmed':
                                                                statusClass = 'bg-info';
                                                                statusText = 'Đã xác nhận';
                                                                statusIcon = 'fas fa-check';
                                                                break;
                                                            case 'shipping':
                                                                statusClass = 'bg-primary';
                                                                statusText = 'Đang giao';
                                                                statusIcon = 'fas fa-truck';
                                                                break;
                                                            case 'delivered':
                                                                statusClass = 'bg-success';
                                                                statusText = 'Đã giao';
                                                                statusIcon = 'fas fa-check-circle';
                                                                break;
                                                            case 'cancelled':
                                                                statusClass = 'bg-danger';
                                                                statusText = 'Đã hủy';
                                                                statusIcon = 'fas fa-times-circle';
                                                                break;
                                                            default:
                                                                statusClass = 'bg-secondary';
                                                                statusText = 'Không xác định';
                                                                statusIcon = 'fas fa-question';
                                                        }
                                                    %>
                                                    <span class="badge <%= statusClass %>">
                                                        <i class="<%= statusIcon %> me-1"></i><%= statusText %>
                                                    </span>
                                                </td>
                                                <td class="text-center">
                                                    <div class="btn-group" role="group">
                                                        <a href="/login/orders/<%= order.order_id %>" 
                                                           class="btn btn-outline-primary btn-sm" 
                                                           title="Xem chi tiết">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        
                                                        <% if (order.status === 'pending') { %>
                                                            <button type="button" 
                                                                    class="btn btn-outline-danger btn-sm" 
                                                                    title="Hủy đơn hàng"
                                                                    onclick="cancelOrder(<%= order.order_id %>)">
                                                                <i class="fas fa-times"></i>
                                                            </button>
                                                        <% } %>
                                                        
                                                        <% if (order.status === 'delivered') { %>
                                                            <button type="button" 
                                                                    class="btn btn-outline-success btn-sm" 
                                                                    title="Mua lại"
                                                                    onclick="reorder(<%= order.order_id %>)">
                                                                <i class="fas fa-redo"></i>
                                                            </button>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        
                        <!-- Order Summary Footer -->
                        <div class="card-footer bg-light">
                            <div class="row text-center">
                                <div class="col-md-3">
                                    <strong class="text-warning">
                                        <%= orders.filter(o => o.status === 'pending').length %>
                                    </strong>
                                    <br><small>Chờ xử lý</small>
                                </div>
                                <div class="col-md-3">
                                    <strong class="text-primary">
                                        <%= orders.filter(o => o.status === 'shipping').length %>
                                    </strong>
                                    <br><small>Đang giao</small>
                                </div>
                                <div class="col-md-3">
                                    <strong class="text-success">
                                        <%= orders.filter(o => o.status === 'delivered').length %>
                                    </strong>
                                    <br><small>Đã giao</small>
                                </div>
                                <div class="col-md-3">
                                    <strong class="text-danger">
                                        <%= orders.filter(o => o.status === 'cancelled').length %>
                                    </strong>
                                    <br><small>Đã hủy</small>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <!-- Empty Orders State -->
                    <div class="card shadow text-center">
                        <div class="card-body py-5">
                            <i class="fas fa-shopping-bag fa-5x text-muted mb-4"></i>
                            <h4 class="text-muted">Chưa có đơn hàng nào</h4>
                            <p class="text-muted mb-4">
                                Bạn chưa đặt đơn hàng nào. Hãy khám phá các sản phẩm tuyệt vời của chúng tôi!
                            </p>
                            <div class="d-flex justify-content-center gap-2">
                                <a href="/product" class="btn btn-primary">
                                    <i class="fas fa-shopping-cart me-2"></i>Bắt đầu mua sắm
                                </a>
                                <a href="/" class="btn btn-outline-primary">
                                    <i class="fas fa-home me-2"></i>Về trang chủ
                                </a>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
        
        <!-- Quick Actions -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="fas fa-tools me-2"></i>Thao tác nhanh
                        </h6>
                        <div class="d-flex flex-wrap gap-2">
                            <a href="/product" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-plus me-1"></i>Đặt hàng mới
                            </a>
                            <a href="/login/profile" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-user me-1"></i>Hồ sơ cá nhân
                            </a>
                            <a href="/cart" class="btn btn-outline-success btn-sm">
                                <i class="fas fa-shopping-cart me-1"></i>Giỏ hàng
                            </a>
                            <button type="button" class="btn btn-outline-info btn-sm" onclick="window.print()">
                                <i class="fas fa-print me-1"></i>In trang
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <%- include('../layout/footer') -%>
    
    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Cancel order function
        function cancelOrder(orderId) {
            if (confirm('Bạn có chắc chắn muốn hủy đơn hàng #' + orderId + ' không?')) {
                // TODO: Implement cancel order functionality
                fetch(`/login/orders/${orderId}/cancel`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('Không thể hủy đơn hàng. Vui lòng thử lại!');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra. Vui lòng thử lại!');
                });
            }
        }
        
        // Reorder function
        function reorder(orderId) {
            if (confirm('Bạn có muốn đặt lại đơn hàng #' + orderId + ' không?')) {
                // TODO: Implement reorder functionality
                window.location.href = `/login/orders/${orderId}/reorder`;
            }
        }
        
        // Auto refresh every 30 seconds to check order status updates
        setInterval(() => {
            const currentUrl = window.location.href;
            if (currentUrl.includes('/login/orders') && !currentUrl.includes('?')) {
                // Only refresh orders list page, not detail pages
                location.reload();
            }
        }, 30000);
    </script>
</body>
</html>